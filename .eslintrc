{
    "rules": {
        "indent": [
            2,
            4
        ],
        "quotes": [
            2,
            "single"
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "semi": [
            2,
            "always"
        ],
        "no-console": 1
    },
    "env": {
        "node": true,
        "browser": true,
        "mocha": true
    },
    "ecmaFeatures": {
        "blockBindings": true,
        "modules": true
    },
    "parser": "babel-eslint",
    // to support ES6
    "plugins": [
        "eslint-plugin-react"
    ],
    "extends": "eslint:recommended"
}
